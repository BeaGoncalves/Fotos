<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_main"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:contentDescription="@string/descricao_imagem" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_pick_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="16dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/text_choose_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/material_on_background_emphasis_high_type"
        />
 <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_open_camera_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/text_open_button"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/material_on_background_emphasis_high_type"
        />


</LinearLayout>